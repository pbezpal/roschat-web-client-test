    }
    stages{
        stage("Cleaning the assembly directory"){
            steps{
                deleteDir();
            }
        }
        stage("Clonning from a git repository"){
            steps{
                script{
                    try{
                        git 'ssh://bezpalko_p@10.10.199.35/opt/git/firelink/test-roschat-web-client'
                    }catch(err){
                        currentBuild.result = "Failure"
